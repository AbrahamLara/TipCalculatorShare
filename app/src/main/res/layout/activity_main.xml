<?xml version="1.0" encoding="utf-8"?><GridLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/z"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:useDefaultMargins="true"    tools:context=".MainActivity">    <EditText        android:id="@+id/editText_BillAmount"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_row="0"        android:layout_column="0"        android:layout_columnSpan="2"        android:background="?android:attr/colorActivatedHighlight"        android:ems="10"        android:inputType="number"        android:maxLength="6"        android:textSize="24sp"        android:textStyle="bold" />    <TextView        android:id="@+id/textView_BillAmount"        android:layout_width="wrap_content"        android:layout_height="47dp"        android:layout_row="0"        android:layout_column="0"        android:layout_columnSpan="2"        android:layout_gravity="fill_horizontal"        android:background="#7cb3d3"        android:labelFor="@+id/editText_BillAmount"        android:text="Bill Amount"        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"        android:textSize="24sp"        android:textStyle="bold" />    <SeekBar        android:id="@+id/seekBar"        android:layout_width="339dp"        android:layout_height="35dp"        android:layout_row="1"        android:layout_column="1"        android:max="100"        android:min="0"        android:scrollbarSize="18sp" />    <TextView        android:id="@+id/percentage"        android:layout_width="52dp"        android:layout_height="41dp"        android:layout_row="1"        android:layout_column="0"        android:text="0%"        android:textSize="24sp"        android:textStyle="bold" />    <TextView        android:id="@+id/textTip"        android:layout_width="53dp"        android:layout_height="37dp"        android:layout_row="2"        android:layout_column="0"        android:background="@android:color/background_light"        android:text="Tip"        android:textSize="18sp"        android:textStyle="bold" />    <TextView        android:id="@+id/viewTip"        android:layout_width="331dp"        android:layout_height="37dp"        android:layout_row="2"        android:layout_column="1"        android:background="@android:color/background_light"        android:textSize="18sp"        android:textStyle="bold" />    <TextView        android:id="@+id/Total"        android:layout_width="52dp"        android:layout_height="41dp"        android:layout_row="3"        android:layout_column="0"        android:background="@android:color/background_light"        android:text="Total"        android:textSize="18sp"        android:textStyle="bold" />    <TextView        android:id="@+id/viewTotalBill"        android:layout_width="333dp"        android:layout_height="41dp"        android:layout_row="3"        android:layout_column="1"        android:background="@android:color/background_light"        android:textSize="18sp"        android:textStyle="bold" />    <Spinner        android:id="@+id/spinner"        android:layout_width="88dp"        android:layout_height="51dp"        android:layout_row="4"        android:layout_column="1" />    <RadioGroup        android:id="@+id/Radio_Grupo"        android:layout_width="253dp"        android:layout_height="84dp"        android:layout_row="5"        android:layout_column="1"        android:orientation="horizontal">        <TextView            android:id="@+id/textView2"            android:layout_width="wrap_content"            android:layout_height="54dp"            android:layout_weight="1"            android:text="Select rouding"            android:textSize="18sp"            android:textStyle="bold" />        <RadioButton            android:id="@+id/radioOne"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_weight="1"            android:onClick="onRadioButtonClicked"            android:text="Yes"            />        <RadioButton            android:id="@+id/radioTwo"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_weight="1"            android:onClick="onRadioButtonClicked"            android:text="No" />    </RadioGroup>    <TextView        android:id="@+id/textViewDisplatTotal"        android:layout_width="278dp"        android:layout_height="67dp"        android:layout_row="6"        android:layout_column="1"        android:text="to displaythePerPersonTotalamount "        android:textSize="18sp"        android:textStyle="bold" />    <TextView        android:id="@+id/textNofPeople"        android:layout_width="108dp"        android:layout_height="49dp"        android:layout_row="4"        android:layout_column="0"        android:text="N. of People"        android:textSize="18sp"        android:textStyle="bold" />    <TextView        android:id="@+id/textPersonPay"        android:layout_width="120dp"        android:layout_height="49dp"        android:layout_row="6"        android:layout_column="0"        android:text="Each Person Pays"        android:textSize="18sp"        android:textStyle="bold" /></GridLayout>